{
  "AllowedHosts": "*",
  "RabbitMQ": {
    "Hostname": "localhost",
    "Username": "admin",
    "Password": "admin",
    "Timeout": 10
  },
  "AppSettings": {
    "Keycloak": {
      "Authority": "https://idp-gc.bariserv.net/realms/gc-dev",
      "Audience": "gc-gateway-api",
      "RequireHttpsMetadata": true
    },
    "AllowedOrigins": [
      "http://localhost:4200"
    ]
  },
  "GatewayRouting": {
    "Microservices": [
      {
        "Id": "mainsite",
        "Queue": "mainsite_queue",
        "Scope": "Private",
        "Resources": [
          {
            "Type": "INFRA",
            "Name": "Health",
            "Scope": "Public",
            "Actions": [
              {
                "Name": "Check"
              }
            ]
          },
          {
            "Type": "DATA",
            "Name": "Users",
            "Scope": "Private",
            "Actions": [
              {
                "Name": "Load",
                "Scope": "Public"
              }
            ]
          },
          {
            "Type": "DATA",
            "Name": "Countries",
            "Scope": "Private",
            "Actions": [
              {
                "Name": "List",
                "Scope": "Public"
              }
            ]
          },
          {
            "Type": "DATA",
            "Name": "GameTypes",
            "Scope": "Private",
            "Actions": [
              {
                "Name": "List",
                "Scope": "Public"
              }
            ]
          },
          {
            "Type": "DATA",
            "Name": "Games",
            "Scope": "Private",
            "Actions": [
              {
                "Name": "List",
                "Scope": "Public"
              }
            ]
          }
        ]
      },
      {
        "Id": "worldofwarcraft",
        "Queue": "worldofwarcraft_queue",
        "Scope": "Private",
        "Resources": [
          {
            "Type": "INFRA",
            "Name": "Health",
            "Scope": "Public",
            "Actions": [
              {
                "Name": "Check"
              }
            ]
          },
          {
            "Type": "DATA",
            "Name": "Classes",
            "Scope": "Private",
            "Actions": [
              {
                "Name": "List",
                "Scope": "Public"
              }
            ]
          }
        ]
      }
    ]
  }
}
